peso = float(input('Qual o seu peso? (em Kg) '))
altura = float(input('Qual a sua altura? (em M)'))

imc = peso / (altura**2)

if imc < 18.5:
    print(f'Seu IMC é {imc:.2f} e você está Abaixo do peso')
elif imc <= 24.9:
    print(f'Seu IMC é {imc:.2f} e você está com o Peso ideal (parabéns)')
elif imc <= 29.9:
    print(f'Seu IMC é {imc:.2f} e você está Levemente acima do peso')
elif imc <= 34.5:
    print(f'Seu IMC é {imc:.2f} e você está em Obesidade Leve (grau I)')
elif imc <= 39.9:
    print(f'Seu IMC é {imc:.2f} e você está em Obesidade Severa (grau II)')
else:
    print(f'Seu IMC é {imc:.2f} e você está em Obesidade Mórbida (grau III)')

print('Fim do Programa')
